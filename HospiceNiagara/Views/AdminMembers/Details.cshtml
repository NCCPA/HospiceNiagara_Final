@model HospiceNiagara.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<div class="page-header">
    <h2>Profile - <small>@Model.FirstName @Model.LastName</small></h2>
</div>

<div class="col-md-4">
    <div class="profilePicture">
        @if (Model.ProfilePicture != null)
        {
            <img src="@Url.Action("ShowPic", "Profile", new { id = Model.Id })" class="img-responsive" style="max-height:400px; overflow:hidden" alt="portfolio Picture" />
        }
        else
        {
            <img src="~/img/login_background.jpg" style="max-height:400px; overflow:hidden" class="img-responsive" alt="Default Background for Users without portfolio Pictures" />
        }
    </div>    
</div>

<div class="col-md-8">
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">Profile Information</div>
        <div class="panel-body">
            <p><b>Name:</b> @Model.FirstName @Model.LastName</p>
            <p><b>Bio:</b> @Model.Bio</p>
            <p><b>Position:</b> @Model.Position</p>
            <p><b>Position Description:</b> @Model.PositionDescription</p>

            <p>
                <b>Phone Number:</b> @Html.DisplayFor(m => m.PhoneNumber)
                @if (Model.PhoneExt != "")
                {
                    <span> <b>Ext:</b> @Model.PhoneExt </span>
                }
            </p>
            <p><b>Email: </b> @Model.Email</p>            
            <p><b>Website Role:</b> @ViewBag.roleName</p>

            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
        </div>

        <!-- Table -->
        <table class="table"></table>
    </div>
</div>


