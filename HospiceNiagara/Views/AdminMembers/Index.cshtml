@model PagedList.IPagedList<HospiceNiagara.Models.ApplicationUser>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<h2>Members</h2>
<hr />
<!--Search-->
@using (Html.BeginForm("Index", "AdminMembers", FormMethod.Get))
{
    <p>
        <div class="form-inline">
            <label class="control-label">Search by Member:</label> @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <input type="submit" value="Search" class="btn btn-warning" />
        </div>
    </p>
}
<!-- /End of search-->

<table class="table">
    <tr>
        <th>
           @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            E-Mail
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Phone Extension
        </th>
        <th>
            Contact
        </th>
        <th>
            Position Title
        </th>
        <th>@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-block" })</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneExt)
        </td>
        <td>
            @if(item.IsContact)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { Id = item.Id }, new { @class = "btn btn-default col-md-4" }) 
            @Html.ActionLink("Details", "Details", new { Id=item.Id }, new { @class = "btn btn-default col-md-4" }) 
            @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { @class = "btn btn-default col-md-4" })
        </td>
    </tr>
}

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
