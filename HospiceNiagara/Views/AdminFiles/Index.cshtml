@model IEnumerable<HospiceNiagara.Models.DatabaseModels.File>
@{
    ViewBag.Title = "Index";
}

<h2>Resources</h2>

<p>
    <!--Search-->
    @using (Html.BeginForm("Index", "AdminFiles", FormMethod.Get))
    {
    <p>
        <div class="form-inline">
            <label class="control-label">Search by File Name: </label> @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                 <label for="FolderID" class="control-label">Folder Name: </label>                 
                @Html.DropDownList("FolderID", null, htmlAttributes: new { @class = "form-control", @Name="folderID" })
              
            
            <input type="submit" value="Search" class="btn btn-warning" />
        </div>
    </p>
    }
    <!-- /End of search-->
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Folder.FolderName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileDescription)
        </th>
        <th>
            File Type
        </th>
        <th>@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary col-md-9" })</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Folder.FolderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MimeType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-default col-md-3" })
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default col-md-3" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default col-md-3" })
            </td>
        </tr>
    }
</table>
