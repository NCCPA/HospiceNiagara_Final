@model IEnumerable<HospiceNiagara.Models.DatabaseModels.File>

@{
    ViewBag.Title = "Index";
}

<h1>Resources</h1>
<hr >
<br />
<form class="form-inline">
    @using (Html.BeginForm("", "AdminFiles", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", name = "fileUploadForm" }))
    {

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label for="fileName" class="control-label">File Name</label>
                    <input type="text" id="fileName" class="form-control" required name="name" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label for="fileDesc">File Description</label>
                    <input type="text" id="fileDesc" class="form-control" required name="fileDesc" />
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-md-4">

                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <input type="file" id="fileUpload" class="file form-control" name="FileUpload1" />
                </div>
            </div>
        </div>
    }
</form>
<br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileDescription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
