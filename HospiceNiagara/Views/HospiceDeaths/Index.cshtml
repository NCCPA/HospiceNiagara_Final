@model IEnumerable<HospiceNiagara.Models.DatabaseModels.Deaths>

@{
    ViewBag.Title = "Index";
}

<h1>In Memoriam</h1>
<br />
<br />
<form class="form-inline">
    <div class="form-group">
        <label for="txtSearch" class="sr-only">Search</label>
        <input type="text" class="form-control" id="txtSearch" placeholder="Enter Search Content">
    </div>
    <div class="form-group">
        <select name="ddlScheduleSelection" class="form-control">
            <option value="all">Recent</option>
            <option value="past">All</option>
            <option value="past">Name</option>
        </select>
    </div>
    <div class="form-group">
        @using (Html.BeginForm("Index", "File", FormMethod.Get))
        {
            <input type="submit" class="btn btn-blue btn-primary" value="Filter" />
        }
    </div>
</form>
<br />
<br />

<div class="row">
    @foreach (var item in Model.Skip(0).Take(10))
    {
        <div class="col-xs-12 col-sm-10  col-sm-push-1">
            <div class="panel panel-default">
                <div class="panel-heading">@Html.DisplayFor(modelItem => item.Name)</div>
                <div class="row">
                    <div class="panel-body">
                        <div class="col-xs-12">
                            Obituary : @Html.DisplayFor(modelItem => item.Obituary)
                            <div class="row">
                                <div class="col-xs-6 col-sm-3">
                                    @Html.DisplayNameFor(model => model.Location)  : @Html.DisplayFor(modelItem => item.Location)
                                </div>
                                <div class="col-xs-6 col-sm-3">
                                    @Html.DisplayNameFor(model => model.Date) : @Html.DisplayFor(modelItem => item.Date)
                                </div>
                                <div class="col-xs-6 col-sm-3">
                                    @Html.DisplayNameFor(model => model.Note) : @Html.DisplayFor(modelItem => item.Note)
                                  </div>
                                <div class="col-xs-6 col-sm-3">
                                    Posted By : @Html.DisplayFor(modelItem => item.CreatedByID)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

