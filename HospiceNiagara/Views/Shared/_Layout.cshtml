<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {      
    <div class="nav-side-menu col-md-2">
        <div class="brand">Hospice Niagara</div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <div class="welcomePerson">Welcome @User.Identity.Name</div>
            <ul id="menu-content" class="menu-content collapse out">
                
                   @Html.Partial("_LoginPartial")
            
                
                <li class="active">
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home fa-lg"></i> Home
                    </a>
                </li>

                <li data-toggle="collapse" data-target="#myHospice" class="collapsed">
                    <a href="#"><i class="fa fa-flash fa-lg"></i> My Hospice <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="myHospice">
                    <a href="@Url.Action("Index","HospiceFiles")" class="nav-link"><li>Resources</li></a>
                    <a href="@Url.Action("Index","HospiceAnnouncements")" class="nav-link"><li>Announcements</li></a>        
                    <a href="@Url.Action("Index","HospiceMeetings")" class="nav-link"><li>Meetings</li></a>                 
                    <a href="@Url.Action("Index","HospiceDeaths")" class="nav-link"><li>Deaths</li></a>                 
                    <a href="@Url.Action("Index","HopsiceSchedule")" class="nav-link"><li>Schedule</li></a>                                      
                </ul>

              @if (User.IsInRole("Admin")) { 
                <li data-toggle="collapse" data-target="#admin" class="collapsed">
                    <a href="#"><i class="fa fa-dashboard fa-lg"></i> Admin <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="admin">
                    <a href="@Url.Action("Index","AdminMembers")" class="nav-link"><li>Members</li></a>
                    <a href="@Url.Action("Index","AdminSubRoles")" class="nav-link"><li>Sub Roles</li></a>
                    <a href="@Url.Action("Index","AdminFiles")" class="nav-link"><li>Resources</li></a>
                    <a href="@Url.Action("Index","AdminFolders")" class="nav-link"><li>Folders</li></a>
                    <a href="@Url.Action("Index","AdminAnnouncements")" class="nav-link"><li>Announcements</li></a>
                    <a href="@Url.Action("Index","AdminMeetings")" class="nav-link"><li>Meetings</li></a>
                    <a href="@Url.Action("Index","AdminDeaths")" class="nav-link"><li>Deaths</li></a>
                    <li>Schedule</li>
                </ul>
              }

            <!--Text Size-->
            <li data-toggle="collapse" data-target="#size" class="collapsed">
                <a href="#"><i class="fa fa-text-height"></i> Text Size <span class="arrow"></span></a>
            </li>
            <ul class="sub-menu collapse" id="size">
                    <a href="#" id="incfont" class="nav-link"><li><i class="fa fa-plus"></i> Increase </li></a>
                    <a href="#" id="decfont" class="nav-link"><li><i class="fa fa-minus"></i> Decrease </li></a>
            </ul>

            <!--Social Media-->
            <li data-toggle="collapse" data-target="#media" class="collapsed">
                <a href="#"><i class="fa fa-rss"></i> Social Media <span class="arrow"></span></a>
            </li>
            <ul class="sub-menu collapse" id="media">
                <a href="http://www.facebook.com/pages/Hospice-Niagara/157424072710" target="_blank" class="nav-link"><li><i class="fa fa-facebook-square"></i> Facebook</li></a>
                <a href="http://twitter.com/hospiceniagara" target="_blank" class="nav-link"><li><i class="fa fa-twitter-square"></i> Twitter</li></a>
                <a href="http://www.hospiceniagara.ca/" target="_blank" class="nav-link"><li><i class="fa fa-users"></i> Hospice Niagara</li></a>
            </ul>
            </ul>
        </div>
    </div>
     <!-- Page Content -->

             
                    <div class="col-md-9  col-sm-10 col-sm-offset-1 col-md-offset-2 page-content">
                        @RenderBody()
                    </div>
             

            <!-- /#page-content-wrapper -->
    }
    else
    {
        @RenderBody()
    }
</body>
</html>
