<form class="form-inline">
    <div class="form-group">
        <label for="txtSearch" class="sr-only">Search</label>
        <input type="text" class="form-control" id="txtSearch" placeholder="Enter Search Content">
    </div>
    <div class="form-group">
        <select name="ddlScheduleSelection" class="form-control">
            <option value="all">All</option>
            <option value="past">Title</option>
            <option value="past">Description</option>
            <option value="past">Posted By</option>
        </select>
    </div>
    <div class="form-group">
        @using (Html.BeginForm("Index", "File", FormMethod.Get))
        {
            <input type="submit" class="btn btn-blue btn-primary" value="Filter" />
        }
    </div>
</form>
