@model PagedList.IPagedList<HospiceNiagara.Models.DatabaseModels.Announcement>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Announcements";
}

<h2>Announcements</h2>
<hr />
<!--Search-->
@using (Html.BeginForm("Index", "AdminAnnouncements", FormMethod.Get))
{
    <p>
        <div class="form-inline">
            <label class="control-label">Search by Announcement Name :</label> @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <input type="submit" value="Search" class="btn btn-warning" />
        </div>
    </p>
}
<!-- /End of search-->
<p>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Description
        </th>
        <th>
            Public Visible
        </th>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Created By
        </th>
        <th>@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-block" })</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isVisible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedByID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID}, new { @class="btn btn-default col-md-4" } ) 
            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default col-md-4" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default col-md-4" })
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
